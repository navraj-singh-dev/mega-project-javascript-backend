      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "username",
              "value": "",
              "type": "text"
            },
            {
              "key": "email",
              "value": "",
              "type": "text"
            },
            {
              "key": "fullName",
              "value": "",
              "type": "text"
            },
            {
              "key": "password",
              "value": "",
              "type": "text"
            },
            {
              "key": "avatar",
              "type": "file",
              "src": []
            },
            {
              "key": "coverImage",
              "type": "file",
              "src": []
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "register"]
        }
      }
    },
